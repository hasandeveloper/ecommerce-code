<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>





  <body>
    <% if user_signed_in? %>
          welcome: <%= current_user.username %>
          |<%= link_to "Your Cart(#{current_user.cart_line_items.pluck(:quantity).inject(:+)})", cart_line_items_path%>|<%= link_to "Categories", categories_path%>|<%= link_to "Products", products_path%>|<%= link_to "Address", addresses_path%>|<%=link_to "Brand", brands_path%>|<%= link_to "Coupons", coupons_path%>|<%= link_to "Wishlsits(#{current_user.wishlists.pluck(:quantity).inject(:+)})", wishlists_path%>|
          <%= link_to "Account Setting", edit_user_registration_path %>  | <%= link_to "Logout", destroy_user_session_path, method: :delete %> |</br>
        <% else %>
          <%= link_to "Register", new_user_registration_path %> | <%= link_to "Login", new_user_session_path %> |
        <% end %>
    <%= notice %>
    <%= alert %>
    <%= yield %>
    <% if user_signed_in? %>
         <p> You current IP (<%= current_user.current_sign_in_ip %>) </p>
       <% end %>
  </body>
</html>
